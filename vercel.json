{
  "functions": {
    "api/proxy.mjs": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { 
      "source": "/api/proxy/(.*)", 
      "destination": "/api/proxy"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}